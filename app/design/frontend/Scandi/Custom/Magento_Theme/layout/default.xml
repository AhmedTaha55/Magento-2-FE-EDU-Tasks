<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/page.xsd">
       <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg </argument>
                <argument name="logo_height" xsi:type="string">56</argument>
                <argument name="logo_width" xsi:type="string">200</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="header.panel">
            <container name="free_shipping.container" htmlTag="div" htmlClass="free-shipping-container" before="-"/>
        </referenceContainer >

        <referenceContainer name="free_shipping.container">
            <block name="free_shipping" 
            class="Magento\Framework\View\Element\Template" 
            template="Magento_Theme::free_shipping.phtml" 
            ifconfig="carriers/freeshipping/active"/>
        </referenceContainer>
       </body>

       <move element="form.subscribe" destination="content" after="-" />
</page>